@page
@model MyFirstWebApp.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Create";

    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Create Project</h1>
    <hr class="border-t border-gray-300 mb-6" />

    <form method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-4 rounded-md"></div>

        <div>
            <label asp-for="ProjectModel.Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="ProjectModel.Name"
                   class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" />
            <span asp-validation-for="ProjectModel.Name" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="ProjectModel.Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="ProjectModel.Description"
                   class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" />
            <span asp-validation-for="ProjectModel.Description" class="text-sm text-red-600"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit"
                    class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Create
            </button>
            <a asp-page="Index"
               class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}