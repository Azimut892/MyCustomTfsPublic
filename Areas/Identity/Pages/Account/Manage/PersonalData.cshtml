@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";

    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-2xl font-bold mb-4">@ViewData["Title"]</h3>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
        <p class="mb-4 text-gray-600">
            Your account contains personal data that you have given us. This page allows you to download or delete that data.
        </p>

        <p class="mb-6">
            <strong class="font-medium text-red-600">
                Deleting this data will permanently remove your account, and this cannot be recovered.
            </strong>
        </p>

        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
            <button type="submit"
                    class="px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                Download
            </button>
        </form>

        <div>
            <a id="delete"
               asp-page="DeletePersonalData"
               class="inline-block px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                Delete
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}