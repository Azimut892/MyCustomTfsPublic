@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="flex flex-col space-y-1">
    <li>
        <a class="block px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-blue-100 text-blue-700" : "text-gray-700")"
           id="profile"
           asp-page="./Index">
            Profile
        </a>
    </li>
    <li>
        <a class="block px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-blue-100 text-blue-700" : "text-gray-700")"
           id="email"
           asp-page="./Email">
            Email
        </a>
    </li>
    <li>
        <a class="block px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-blue-100 text-blue-700" : "text-gray-700")"
           id="change-password"
           asp-page="./ChangePassword">
            Password
        </a>
    </li>
    @if (hasExternalLogins)

    {
        <li id="external-logins">
            <a class="block px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-blue-100 text-blue-700" : "text-gray-700")"
               id="external-login"
               asp-page="./ExternalLogins">
                External logins
            </a>
        </li>
    }
    <li>
        <a class="block px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-blue-100 text-blue-700" : "text-gray-700")"
           id="two-factor"
           asp-page="./TwoFactorAuthentication">
            Two-factor authentication
        </a>
    </li>
    <li>
        <a class="block px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-blue-100 text-blue-700" : "text-gray-700")"
           id="personal-data"
           asp-page="./PersonalData">
            Personal data
        </a>
    </li>
</ul>